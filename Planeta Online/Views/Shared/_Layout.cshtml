<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Planeta Hub</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/fullcalendarcss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/select_item.js" type="text/javascript"></script>
    <script src="~/ckeditor/ckeditor/ckeditor.js" type="text/javascript"></script>
    <script>

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-72119939-1', 'auto');
        ga('send', 'pageview');

    </script>
</head>
<body>
    <div class="wrapper">
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Planeta Hub", "Index", "Events", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse" width="100%">
                    <ul class="nav navbar-nav" width="100%">
                        <li id="events">@Html.ActionLink("Заходи", "Index", "Events")</li>
                        <li class="hidden-xs hidden-sm"><img img class="nav-img" src="~/Content/circle.png" /></li>
                        <li id="books">@Html.ActionLink("Книги", "Index", "Books")</li>
                        <li class="hidden-xs hidden-sm"><img img class="nav-img" src="~/Content/circle.png" /></li>
                        <li id="about">@Html.ActionLink("Про Планету", "About", "Home")</li>
                        <li class="hidden-xs hidden-sm"><img img class="nav-img" src="~/Content/circle.png" /></li>
                        <li id="blog">@Html.ActionLink("Блог", "Index", "Blog")</li>
                        @if (User.Identity.IsAuthenticated && User.IsInRole("SuperAdmin"))
                        {
                            <li class="hidden-xs hidden-sm"><img img class="nav-img" src="~/Content/circle.png" /></li>
                            <li id="admin">@Html.ActionLink("Адміністратор", "Index", "Administrator")</li>
                        }
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="col-lg-2">
                <h5>&copy; Planeta Hub - @DateTime.Now.Year</h5>
            </div>
            <div class="col-lg-3">
                <ul>
                    <li>@Html.ActionLink("Заходи", "Index", "Events")</li>
                    <li>@Html.ActionLink("Створити захід", "Create", "Events")</li>
                    <li>@Html.ActionLink("Календар", "Calendar", "Events")</li>
                </ul>
            </div>
            <div class="col-lg-2">
                @Html.ActionLink("Книги", "Index", "Books")
            </div>
            <div class="col-lg-2">
                @Html.ActionLink("Про Планету", "About", "Home")
            </div>
            <div class="col-lg-2">
                @Html.ActionLink("Блог", "Index", "Blog")
            </div>
        </div>
    </footer>
    
    @Scripts.Render("~/bundles/fullcalendarjs")
    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
