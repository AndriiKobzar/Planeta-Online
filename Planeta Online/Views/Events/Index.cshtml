@model  IEnumerable<Planeta_Online.Models.Event>

@{
    ViewBag.Title = "Заходи";
}
@Html.Partial("_EventPartial")
<h2>Events</h2>


<table width="100%">
    @for(int i = 0; i < Math.Ceiling((double)Model.Count() / 3); i++)
    {
        <tr>
            @for (int j = i * 3; j < (i + 1) * 3 && j < Model.Count(); j++)
            {
                <td>
                    <div class="col col-lg-4">
                        @Html.DisplayFor(model => model.ElementAt(j).Name)<br/>
                        @Html.DisplayFor(model => model.ElementAt(j).From)-@Html.DisplayFor(model => model.ElementAt(j).Till)<br/>
                        <input type="button" class="btn btn-link" value="Зареєструватися" onclick="location.href='@Url.Action("Register", "Events", new { id=Model.ElementAt(i).Id })'" />
                    </div>
                </td>
            }           
        </tr>
    }
</table>