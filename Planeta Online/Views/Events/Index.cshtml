@model  IEnumerable<Planeta_Online.Models.Event>

@{
    ViewBag.Title = "Заходи";
}
@Html.Partial("_EventPartial")
<h2>Заходи</h2>

@for (int i = 0; i < Math.Ceiling((double)Model.Count() / 3); i++)
{

    for (int j = i * 3; j < (i + 1) * 3 && j < Model.Count(); j++)
    {

        <div class="col col-lg-4 col-md-6" style="margin-bottom:10px">
            <a href="~/Events/Details/@Model.ElementAt(j).Id"><img src="@Model.ElementAt(j).PosterPath" width="300" height="400" alt="@Model.ElementAt(j).Name"></a>
        </div>

    }
}
