@model Planeta_Online.Models.Event

@{
    ViewBag.Title = "Деталі";
}
@Html.Partial("_EventPartial")
<h2>@Model.Name</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.From)
        </dt>
        <dd>
            @Model.From.ToString("dd.MM.yyyy H:mm")
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Till)
        </dt>
        <dd>
            @Model.Till.ToString("dd.MM.yyyy H:mm")
        </dd>

    </dl>
</div>
<p>
    @if (Model.From > DateTime.Now)
    {
        Html.ActionLink("Зареєструватися", "Register", new { id = Model.Id }, new { @class = "btn btn-default" });
    }
</p>
