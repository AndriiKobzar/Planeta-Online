@model IEnumerable<Planeta_Online.Models.EventApplication>

@{
    ViewBag.Title = "SubmittedEvents";
}

<h2>Зареєстровані події</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Attachments)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CreatorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatorEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Attachments)
        </td>
        <td>
            @Html.ActionLink("Видалити", "DeleteEvent", new { id=item.Id }) |
            @Html.ActionLink("Додати до списку подій", "Confirm", new { id=item.Id})
        </td>
    </tr>
}

</table>
