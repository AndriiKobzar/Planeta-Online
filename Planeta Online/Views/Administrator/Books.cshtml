@model IEnumerable<Planeta_Online.Models.Book>

@{
    ViewBag.Title = "Books";
}

<h2>Книги</h2>

@Html.ActionLink("Додати книгу", "CreateBook")

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.ActionLink("Редагувати", "EditBook", new { id = item.Id })|
            @Html.ActionLink("Видалити", "DeleteBook", new { id = item.Id })
        </td>
    </tr>
}
</table>
@Html.ActionLink("На головну", "Index")